<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ResultLayout_toolbar"
        android:background="@drawable/gradient_bg_light"
        android:titleTextColor="@color/white"
        android:title="Game Over"
        />
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_gameover"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ResultLayout_toolbar"
        android:id="@+id/GameOver_ic"
        android:layout_marginTop="15dp"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/layout_gameover_tv"
        android:layout_below="@id/GameOver_ic">

        <TextView
            android:id="@+id/grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Game"
            android:textColor="@color/colorPrimary"
            android:textSize="60sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Over"
            android:textColor="@color/black"
            android:textSize="60sp"
            android:layout_toRightOf="@id/grade"
            android:layout_marginLeft="10dp"

            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/black"
        android:layout_below="@id/layout_gameover_tv"
        android:layout_marginRight="20dp"
        android:layout_marginLeft ="20dp"
        android:layout_marginTop="45dp"
        android:id="@+id/seprator"
        android:layout_centerInParent="true"
        >
    </View>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seprator"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/WinnerLayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:id="@+id/tv_WinnerName"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="35dp"
            android:text="Wins."
            android:textColor="@color/black"
            android:layout_toRightOf="@id/tv_WinnerName"
            android:layout_marginLeft="10dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/WinnerLayout"
        android:layout_marginTop="20dp"
        android:id="@+id/ResultsMainLayout"
>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Yellow"
                    android:textColor="#ffc107"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:id="@+id/tv_player1Name"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Red"
                    android:textColor="#ff0000"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/tv_player2Name"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Draw"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/line5"
                android:layout_marginTop="7dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ffc107"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:id="@+id/tv_player1winsNumResult"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#ff0000"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:id="@+id/tv_player2winsNumResult"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_DrawNumResult"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="0"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    />
            </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Reset Game"
                    android:id="@+id/btn_ResetGameResult"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_style_2"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    />

        </LinearLayout>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_tryagain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Try Again"
        android:background="@drawable/btn_style_2"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#FF0033"
        android:layout_marginBottom="60dp"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>
